<div class="container top-page">
  <!--<p id="notice"><%= notice %></p>-->

  <h1>Listing Users</h1>
  <div class="row top-page">
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
      <h4 style="color:red;">First name</h4>
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
      <h4 style="color:red;">Last name</h4>
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
      <h4 style="color:red;">Email</h4>
    </div>
  </div>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <p><%= user.first_name %></p>
      </div>
      <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <p><%= user.last_name %></p>
      </div>
      <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <p><%= user.email %></p>
      </div>
      
      <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <p><%= link_to 'Edit', edit_user_path(user) %> | <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
  </div>
  <br>
  <div class="row top-page">
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
      <p class="btn btn-default" style="color: red; background-color: #ffffff; border:1px solid red;"><%= link_to 'New User', new_user_path, :style => "color:red;" %></p>
    </div>
  </div>
</div>