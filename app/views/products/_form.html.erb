<div class="container-fuid">
  <%= form_for(product) do |f| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-sm-8 col-sm-offset-3  edit-window">
        <div class="field col-xs-12 col-sm-4">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>

        <div class="field col-xs-12 col-sm-4">
          <%= f.label :image_url %>
          <%= f.text_field :image_url %>
        </div>

         <div class="field col-xs-12 col-sm-4">
          <%= f.label :color %>
          <%= f.text_field :color %>
        </div>

        <div class="field col-xs-12 col-sm-4">
          <%= f.label :price %>
          <%= f.text_field :price %>
        </div>

        <div class="actions col-xs-12 col-sm-4">
          <%= f.submit %>
        </div>

        <div class="field col-sm-8">
          <%= f.label :description %>
          <%= f.text_area :description %>
        </div>
      </div> 
    </div>    
  <% end %>
</div>
